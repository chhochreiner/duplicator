        System.out.println("Edit details for $prename $surname on LinkedIn.com");
    
        driver.get("http://www.linkedin.com/profile/edit-personal-info?locale=en_US");

        element = driver.findElement(By.id("phoneNumberParam-phoneParam-editPersonalInformation"));
        element.sendKeys("$phonenumber");
      
        element = driver.findElement(By.id("imServiceParam-imParam-editPersonalInformation"));
        element.sendKeys("SKYPE");
      
        element = driver.findElement(By.id("imIDParam-imParam-editPersonalInformation"));
        element.sendKeys("$skype");

        element = driver.findElement(By.id("day-birthdayParam-editPersonalInformation"));
        element.sendKeys("$birthday_date_without_null");

        element = driver.findElement(By.id("birthYearParam-editPersonalInformation"));
        element.sendKeys("$birthday_year");

        element = driver.findElement(By.name("maritalStatusParam-editPersonalInformation"));
        element.sendKeys("SINGLE");

        System.out.println("please check the data and press enter");
        scanner.nextLine();

        element = driver.findElement(By.xpath("//input[@value='Save Changes']"));
        element.click();

	    System.out.println("Personal Information on LinkedIn was updated.");
	
