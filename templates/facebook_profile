        System.out.println("Edit details for $prename $surname on Facebook.com");
    
        driver.get("https://www.facebook.com/editprofile.php?sk=basic");

        element = driver.findElement(By.name("sex"));
        element.sendKeys("$sex");
      
        element = driver.findElement(By.name("birthday_month"));
        element.sendKeys("$birthday_month_alpha");

        element = driver.findElement(By.name("birthday_day"));
        element.sendKeys("$birthday_date_without_null");

        element = driver.findElement(By.name("birthday_year"));
        element.sendKeys("$birthday_year");

        element = driver.findElement(By.name("about_me"));
        element.sendKeys("$about_me");

        System.out.println("please check the data and press enter");
        scanner.nextLine();

        element = driver.findElement(By.xpath("//input[@value='Save Changes']"));
        element.click();

	    System.out.println("basic data on Facebook was updated.");
	
