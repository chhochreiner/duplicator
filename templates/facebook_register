        System.out.println("Start registration of $prename $surname on Facebook");
    
        driver.get("http://www.facebook.com/");

        WebElement element = driver.findElement(By.name("firstname"));
        element.sendKeys("$prename");
      
        element = driver.findElement(By.name("lastname"));
        element.sendKeys("$surname");
        
        element = driver.findElement(By.name("reg_email__"));
        element.sendKeys("$email");

        element = driver.findElement(By.name("reg_email_confirmation__"));
        element.sendKeys("$email");
        
        element = driver.findElement(By.name("reg_passwd__"));
        element.sendKeys("$password");

        element = driver.findElement(By.name("sex"));
        element.sendKeys("$sex");

        element = driver.findElement(By.name("birthday_month"));
        element.sendKeys("$birthday_month_alpha");

        element = driver.findElement(By.name("birthday_day"));
        element.sendKeys("$birthday_date_without_null");

        element = driver.findElement(By.name("birthday_year"));
        element.sendKeys("$birthday_year");

        System.out.println("please check the data and press enter");

        scanner.nextLine();

        element = driver.findElement(By.xpath("//input[@value='Sign Up']"));
        element.click();

        System.out.println("$prename $surname was registered on Facebook.com");
