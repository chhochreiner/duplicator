        System.out.println("Start registration of $prename $surname on LinkedIn");
    
        driver.get("http://www.linkedin.com/");

        WebElement element = driver.findElement(By.name("firstName"));
        element.sendKeys("$prename");
      
        element = driver.findElement(By.name("lastName"));
        element.sendKeys("$surname");
        
        element = driver.findElement(By.name("email"));
        element.sendKeys("$email");

        element = driver.findElement(By.name("password"));
        element.sendKeys("$password");

        System.out.println("please check the data and press enter");

        scanner.nextLine();

        element = driver.findElement(By.id("btn-submit"));
        element.click();

        System.out.println("$prename $surname was registered on LinkedIn.com");
